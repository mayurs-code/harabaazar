<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvArriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/route_line"
            android:drawablePadding="10dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Arriving in 05 min... "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:alpha=".3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivUserProfile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.18"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/tvHawkerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:singleLine="true"
                    android:text="sarthak urkude"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvHawkerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/montserrat"
                    android:singleLine="true"
                    android:text="fruit Cart (mP09 R7057)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvHawkerRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:drawableLeft="@drawable/star"
                    android:fontFamily="@font/montserrat"
                    android:singleLine="true"
                    android:text=" "
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.12">

                <ImageView
                    android:id="@+id/ivSave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:src="@drawable/call" />
            </RelativeLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TempLayout"
            android:fontFamily="@font/montserrat_bold"
            android:padding="16sp"
            android:text="Cancel"
            android:layout_margin="8dp"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="0dp" />


    </LinearLayout>

</RelativeLayout>