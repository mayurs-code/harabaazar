<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TempLayout"
        android:layout_margin="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserProfile"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.18"
                    android:src="@drawable/man"
                    app:civ_circle_background_color="@color/colorPrimaryTrans" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:singleLine="true"
                        android:text="sarthak urkude"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvVehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/montserrat"
                        android:singleLine="true"
                        android:text="fruit Cart (mP09 R7057)"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:drawableLeft="@drawable/star"
                        android:fontFamily="@font/montserrat"
                        android:singleLine="true"
                        android:text="4.3(256 Reviews)"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.12">

                    <ImageView
                        android:id="@+id/ivSave"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:background="@drawable/circle_orange1"
                        android:backgroundTint="@color/grey"
                        android:padding="10dp"
                        android:src="@drawable/save" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCheckInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/white_corners"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="16dp"
                android:text="Check Inventory"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>